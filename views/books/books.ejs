<%- include('../partials/abovetitle.ejs') %>
<title>library</title>
<%- include('../partials/below-title-bootstrap-link.ejs') %>
</head> 
<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar')%>
    <main class="container mt-5">

        <%- include('../partials/flash')%>
        <div class="row">
            <div class="col-6 ">
                <h1 style="text-align: center;">All Books</h1>
            </div>
        </div>
        
            <div class="row">
                <div class="col-12 ">
                    <% for(let book  of books){ %> 
                        <div class="col-md-4">
                            <img class="img-fluid" alt="book-picture"
                            src="<%=book.images[0].thumbnail %> ">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h4 class="card-title"><%= book.name %> </h4>
                                
                                <p class="card-text">
                                    <small class="text-muted">written by <em><b><%= book.author%></b></em></small>
                                </p>
                                <a class="btn btn-primary" href="/books/<%=book._id%>">View <%=book.name%></a>
                            </div>
                        </div>
                        <% }%>
                </div>
            </div>
            
        
        
        <div>
            <a href="books/new">Add a Book info</a>
        </div>
        <div>
            <p>
                <a href="/">back to index</a>
            </p>
        </div>
    </main>
    <%- include('../partials/footer')%>
</body>
</html>